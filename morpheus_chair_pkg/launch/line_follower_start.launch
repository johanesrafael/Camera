<?xml version="1.0" encoding="UTF-8"?>
<launch>

        <arg name="R" default="123" />
        <arg name="G" default="133" />
        <arg name="B" default="137" />
        <arg name="colour_error_perc" default="10.0" />
        <!-- mode if its different from colour cal, it will start following line-->
        <arg name="mode" default="colour_cal" />

        <node name="line_follower_start"
            pkg="morpheus_chair_pkg"
            type="line_follower.py"
            respawn="false" output="screen" args="$(arg R) $(arg G) $(arg B) $(arg colour_error_perc) $(arg mode)">
        </node>
</launch>